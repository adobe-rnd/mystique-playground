{
  "id": "data_model_pipeline",
  "name": "Data Model Pipeline",
  "description": "This pipeline is used to generate a page using a data model.",
  "inputs": {
    "uploaded_files": null,
    "user_intent": null,
    "website_url": null
  },
  "outputs": {
    "urls": "standard_generation_step.urls"
  },
  "steps": [
    {
      "id": "process_uploaded_files",
      "type": "process_uploaded_files",
      "label": "Process Uploaded Files",
      "inputs": {
        "uploaded_files": "inputs.uploaded_files"
      }
    },
    {
      "id": "fetch_screenshot",
      "type": "fetch_screenshot",
      "label": "Fetch Screenshot",
      "inputs": {
        "website_url": "inputs.website_url"
      },
      "config": {
        "max_width": 1200,
        "max_height": 1200
      }
    },
    {
      "id": "generate_image_captions",
      "type": "generate_image_captions",
      "label": "Generate Image Captions",
      "inputs": {
        "images": "process_uploaded_files.images"
      }
    },
    {
      "id": "standard_generation_step",
      "type": "standard_generation_step",
      "inputs": {
        "user_intent": "inputs.user_intent",
        "text_content": "process_uploaded_files.text_content",
        "images": "process_uploaded_files.images",
        "captions": "generate_image_captions.captions",
        "screenshot": "fetch_screenshot.screenshot"
      }
    }
  ]
}
